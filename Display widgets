import 'package:flutter/material.dart';

void main() {
  runApp(const TextIconExample());
}

class TextIconExample extends StatelessWidget {
  const TextIconExample({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: const Text("Text & Icon Example"),
        ),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [

              // ðŸ”¹ TEXT
              const Text(
                "This is normal Text",
                style: TextStyle(
                  fontSize: 20,
                  fontWeight: FontWeight.bold,
                ),
              ),

              const SizedBox(height: 20),


              // ðŸ”¹ ICON
              const Icon(
                Icons.favorite,
                color: Colors.red,
                size: 40,
              ),
            ],
          ),
        ),
      ),
    );
  }
}
